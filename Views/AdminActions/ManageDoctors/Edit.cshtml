@model Droplet.Models.DoctorViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Doctor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Doctor.Id" />
            <div class="form-group">
                <label asp-for="Doctor.FirstName" class="control-label"></label>
                <input asp-for="Doctor.FirstName" class="form-control" />
                <span asp-validation-for="Doctor.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.LastName" class="control-label"></label>
                <input asp-for="Doctor.LastName" class="form-control" />
                <span asp-validation-for="Doctor.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.PESEL" class="control-label"></label>
                <input asp-for="Doctor.PESEL" class="form-control" />
                <span asp-validation-for="Doctor.PESEL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Hospitals</label>
                @foreach (var hospital in Model.Hospitals)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="SelectedHospitalIds" value="@hospital.Id" id="hospital_@hospital.Id"
                        @(Model.SelectedHospitalIds.Contains(hospital.Id) ? "checked" : "") />
                        <label class="form-check-label" for="hospital_@hospital.Id">@hospital.Name</label>
                    </div>
                }
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
