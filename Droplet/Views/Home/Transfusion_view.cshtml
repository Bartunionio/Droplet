@model List<Droplet.Models.Entities.Transfusion>

<h2>Transfusion History</h2>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Recipient</th>
            <th>Hospital</th>
            <th>Doctor</th>
            <!-- Add more columns as per your Transfusion entity -->
        </tr>
    </thead>
    <tbody>
        @foreach (var transfusion in Model)
        {
            <tr>
                <td>@transfusion.Date</td>
                <td>@transfusion.Recipient.FullName</td>
                <td>@transfusion.Hospital.Name</td>
                <td>@transfusion.Doctor.FullName</td>
                
            </tr>
        }
    </tbody>
</table>
