@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Blood Status";
}

<h2>Blood Status</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Blood Type</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Droplet.Helpers.EnumHelper.GetEnumDescription(item.BloodType)</td>
                    <td>@item.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No blood data found.</p>
}
