@model Droplet.Models.Entities.Recipient

@{
    ViewData["Title"] = "Add Recipient";
}

<h2>Add Recipient</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PESEL">PESEL</label>
        <input asp-for="PESEL" class="form-control" />
        <span asp-validation-for="PESEL" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BloodType" class="control-label"></label>
        <select asp-for="BloodType" class="form-control" asp-items="ViewBag.BloodType"></select>
        <span asp-validation-for="BloodType" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Recipient</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
