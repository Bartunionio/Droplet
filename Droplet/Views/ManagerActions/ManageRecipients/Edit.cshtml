@model Droplet.Models.Entities.Recipient

@{
    ViewData["Title"] = "Delete Recipient";
}

<h2>Delete Recipient</h2>

<p>Are you sure you want to delete this recipient?</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="PESEL">PESEL</label>
        <input asp-for="PESEL" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="BloodType">Blood Type</label>
        <input asp-for="BloodType" class="form-control" disabled />
    </div>
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
