@model List<Droplet.Models.Entities.Recipient>

@{
    ViewData["Title"] = "Recipients List";
}

<h2>Recipients Information</h2>

<div class="mb-3">
    <a asp-action="Add" class="btn btn-primary">Add New Recipient</a>
</div>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>PESEL</th>
                <th>Blood Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var recipient in Model)
            {
                <tr>
                    <td>@recipient.Id</td>
                    <td>@recipient.FirstName</td>
                    <td>@recipient.LastName</td>
                    <td>@recipient.PESEL</td>
                    <td>@recipient.BloodType</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@recipient.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@recipient.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No recipients found.</p>
}
