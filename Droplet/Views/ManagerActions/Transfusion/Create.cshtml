@model Droplet.Models.ViewModels.TransfusionCreateViewModel

@{
    ViewData["Title"] = "Create Transfusion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Transfusion</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="SelectedRecipientId" class="control-label">Select Recipient</label>
        <select asp-for="SelectedRecipientId" class="form-control" asp-items="@ViewBag.Recipients">
            <option value="">-- Select Recipient --</option>
        </select>
        <span asp-validation-for="SelectedRecipientId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BloodQuantity" class="control-label">Blood Quantity</label>
        <input asp-for="BloodQuantity" class="form-control" min="1" required />
        <span asp-validation-for="BloodQuantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SelectedHospitalId" class="control-label">Select Hospital</label>
        <select asp-for="SelectedHospitalId" class="form-control" asp-items="@ViewBag.Hospitals" id="HospitalDropdown">
            <option value="">-- Select Hospital --</option>
        </select>
        <span asp-validation-for="SelectedHospitalId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SelectedDoctorId" class="control-label">Select Doctor</label>
        <select asp-for="SelectedDoctorId" class="form-control" asp-items="@ViewBag.Doctors"></select>
        <span asp-validation-for="SelectedDoctorId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <script>
        document.getElementById('HospitalDropdown').addEventListener('change', function () {
            var hospitalId = this.value;
            var doctorDropdown = document.getElementById('SelectedDoctorId');
            doctorDropdown.innerHTML = '<option value="">-- Select Doctor --</option>'; // Reset the dropdown
            if (hospitalId) {
                fetch('/ManagerActions/Transfusion/GetDoctorsByHospital?hospitalId=' + hospitalId)
                    .then(response => response.json())
                    .then(data => {
                        if (data.success && data.data.length > 0) {
                            data.data.forEach(doctor => {
                                var option = document.createElement('option');
                                option.value = doctor.value;
                                option.text = doctor.text;
                                doctorDropdown.add(option);
                            });
                        } else {
                            alert('No doctors found for the selected hospital.');
                        }
                    })
                    .catch(error => {
                        console.error('Error fetching doctors:', error);
                        alert('An error occurred while fetching doctors.');
                    });
            }
        });
    </script>
}
